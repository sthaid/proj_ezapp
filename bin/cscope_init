#!/bin/bash

# chdir to top of repo
top=$(git rev-parse --show-toplevel)
cd $top

# construct cscope.files 
find . \( -path "./android" -o -path "./cJSON" -o -path "./picoc" -o -path "./lodepng" \) \
    -prune -o -name "*.[ch]" -print > cscope.files
sed -i '/save/d' cscope.files

# create cscope.out database
cscope -b -i cscope.files

# create tags database
ctags -L cscope.files




